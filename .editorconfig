root = true

[*]
indent_style = tab
tab_width = 4
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true
charset = utf-8

[*.{js,jsx,ts,tsx}]
indent_style = tab
tab_width = 4

[*.{scss,css}]
tab_width = 2

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
